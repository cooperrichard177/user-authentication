extends layout

block content
  .main.container
    .row
      .col-md-8.col-md-offset-2
        h1.display-4.m-b-2 Register Today!

        //register form
        form(method="POST" action="/register")
            .form-group
                label(for="name") Name:
                input#name.form-control(type="text", placeholder="first and last", name="name")
            .form-group
                label(for="email") Email:
                input#email.form-control(type="text", placeholder="example@email.com", name="email")
            .form-group
                label(for="favoritebook") Favourite Book:
                input#favoritebook.form-control(type="text", placeholder="The Great Gatsby", name="favoriteBook")
            .form-group
                label(for="pw") Password:
                input#pw.form-control(type="password", name="password")
            .form-group
                label(for="pw2") Confirm Password:
                input#pw2.form-control(type="password", name="confirmPassword")
            button.btn.btn-primary(type="submit") Sign Up
